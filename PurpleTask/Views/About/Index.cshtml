
@using PurpleTask.ViewModels

@model AboutVM
    <!-- Start Banner Hero -->
    <section class="bg-light w-100">
        <div class="container">
            <div class="row d-flex align-items-center py-5">
               @foreach (var item in Model.Abouts)
               {
                    <div class="col-lg-6 text-start">
                    <h1 class="h2 py-5 text-primary typo-space-line">@item.Title</h1>
                    <p class="light-300">
                        @Html.Raw(@item.Description)
                    </p>
                </div>
                <div class="col-lg-6">
                    <img src="./assets/img/@item.Image">
                </div>
               }
            </div>
        </div>
    </section>
    <!-- End Banner Hero -->


    <!-- Start Team Member -->
    <section class="container py-5">
        <div class="pt-5 pb-3 d-lg-flex align-items-center gx-5">

            <div class="col-lg-3">
              @foreach (var item in Model.Teams)
              {
                    <h2 class="h2 py-5 typo-space-line">@item.Name</h2>
                <p class="text-muted light-300">
                   @item.Description
                </p>
              }
            </div>

            <div class="col-lg-9 row">
                
                @foreach (var item in Model.TeamMembers)
                {
                    <div class="team-member col-md-4">
                    <img class="team-member-img img-fluid rounded-circle p-4" src="./assets/img/@item.Image" alt="Card image">
                    <ul class="team-member-caption list-unstyled text-center pt-4 text-muted light-300">
                        <li>@item.Name</li>
                        <li>@item.Position</li>
                    </ul>
                </div>
                }
            </div>

        </div>
    </section>
    <!-- End Team Member -->

    <!-- Start Our Partner -->
    <section class="bg-secondary py-3">
        <div class="container py-5">
           @foreach (var item in Model.Partners)
           {
               <h2 class="h2 text-white text-center py-5">@item.Name</h2> 
           }
            <div class="row text-center">
                @foreach (var item in Model.PartnerMembers)
                {
                     <div class="col-md-3 mb-3">
                    <div class="card partner-wap py-5">
                        @Html.Raw(@item.Image)
                    </div>
                </div>
                }
            </div>
        </div>
    </section>
    <!--End Our Partner-->

    <!-- Start Progress -->
    <section class="bg-white py-5">
        <div class="container my-4">

            @foreach (var item in Model.Creatives)
            {
                <h1 class="creative-heading h2 pb-3">@item.Name</h1>
            }

            <div class="creative-content row py-3">
               @foreach (var item in Model.Creatives)
               {
                   <div class="col-md-5">
                    <p class="text-muted col-lg-8 light-300">@item.Description
                    </p>
                </div> 
               }
                <div class="creative-progress col-md-7">

                    
                    @foreach (var item in Model.Statisticas)
                    {
                        <div class="row mt-4 mt-sm-2">
                        <div class="col-6">
                            <h4 class="h5">@item.Name</h4>
                        </div>
                        <div class="col-6 text-right">@item.Statics%</div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    }

                </div>
            </div>
        </div>
    </section>
    <!-- End Progress -->

    <!-- Start Choice -->
    <section class="why-us banner-bg bg-light">
        <div class="container my-4">
            <div class="row">
               @foreach (var item in Model.ChooseAbouts)
               {
                    <div class="banner-img col-lg-5">
                    <img src="./assets/img/@item.Image" class="rounded img-fluid" alt="">
                </div>
                <div class="banner-content col-lg-7 align-self-end">
                    <h2 class="h2 pb-3">@item.Title</h2>
                    <p class="text-muted pb-5 light-300">
                        @Html.Raw(@item.Description)
                    </p>
                </div>
               }
            </div>
        </div>
    </section>
    <!-- End Choice -->

    <!-- Start Aim -->
    <section class="banner-bg bg-white py-5">
        <div class="container my-4">
            <div class="row text-center">

                @foreach (var item in Model.Futures)
                {
                     <div class="objective col-lg-4 mt-sm-0 mt-4">
                    <div class="objective-icon card m-auto py-4 mb-2 mb-sm-4 bg-secondary shadow-lg">
                        @Html.Raw(@item.Image)
                    </div>
                    <h2 class="objective-heading h3 mb-2 mb-sm-4 light-300">@item.Name</h2>
                    <p class="light-300">
                        @item.Description
                    </p>
                </div>
                }

            </div>
        </div>
    </section>
    <!-- End Aim -->

    <!-- Start Contact -->
    <section class="banner-bg bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto my-4 p-3">
                    <form action="#" method="get"><h1 class="h2 text-center">Stay up to date with us</h1>
                    <div class="input-group py-3">
                    
                        <input name="email" type="text" class="form-control form-control-lg rounded-pill rounded-end" id="email" placeholder="Your Email" aria-label="Your Email">
                        <button class="btn btn-secondary text-white btn-lg rounded-pill rounded-start px-lg-4" type="submit">Subsribe</button>
                    </div>
                    <p class="text-center light-300">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt labore et dolore magna aliqua.</p>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact -->
